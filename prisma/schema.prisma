generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Order {
  id            Int         @id @default(autoincrement())
  name          String
  mobile        String
  email         String?
  orderType     String
  paymentMethod String
  pickupTime    String
  subtotal      Float
  invoiceNumber String?
  status        String      @default("pending")
  items         OrderItem[]
  createdAt     DateTime    @default(now())
}

model OrderItem {
  id       Int    @id @default(autoincrement())
  name     String
  price    Float
  quantity Int
  orderId  Int
  order    Order  @relation(fields: [orderId], references: [id])
}