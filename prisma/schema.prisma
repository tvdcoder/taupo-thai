generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_PRISMA_URL_POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_PRISMA_URL_POSTGRES_URL_NON_POOLING")
}

model Order {
  id              Int         @id @default(autoincrement())
  name            String
  mobile          String
  email           String?
  orderType       String
  paymentMethod   String
  pickupTime      String
  preparationTime String?     // New field for storing selected preparation time
  subtotal        Float
  status          String      @default("pending_confirmation") // Updated default status
  createdAt       DateTime    @default(now())
  items           OrderItem[]
}

model OrderItem {
  id       Int     @id @default(autoincrement())
  name     String
  price    Float
  quantity Int
  option   String?
  orderId  Int
  order    Order   @relation(fields: [orderId], references: [id])
}